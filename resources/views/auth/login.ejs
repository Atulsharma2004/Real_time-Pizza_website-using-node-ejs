<section class="login">
  <div class="flex min-h-full flex-col justify-center px-6 py-10 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account
      </h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm bg-gray-300 p-6 rounded">
      <form class="space-y-6" action="/login" method="POST">

        <% if(messages.error) { %>
          <span class="text-red-500 text-sm">
            <%= messages.error %>
          </span>
          <% } %>

            <div>
              <label for="email" class="block text-sm font-medium  leading-6 text-gray-900">Email address</label>
              <div class="mt-2">
                <input id="email" name="email" type="email" autocomplete="email" required
                  placeholder="Enter Your Email..."
                  class=" px-2 block w-full rounded-md border-0 py-2 text-gray-900 leading-tight focus:outline-none focus:shadow-outline shadow appearance-none sm:text-sm sm:leading-6">
              </div>
            </div>

            <div>
              <div class="flex items-center justify-between">
                <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
                <div class="text-sm text-orange-500">
                  <a href="#" class="font-semibold forgot-text">Forgot password?</a>
                </div>
              </div>
              <div class="mt-2">
                <input id="password" name="password" type="password" placeholder="Enter Your Password..."
                  autocomplete="current-password" required
                  class="px-2 block w-full rounded-md border py-2 text-gray-900 leading-tight focus:outline-none focus:shadow-outline shadow appearance-none   sm:text-sm sm:leading-6">
              </div>
            </div>

            <div>
              <button type="submit"
                class="btn-hero flex w-full justify-center rounded-md  px-3 py-2 text-sm font-semibold leading-6 text-white shadow-sm  focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 ">Sign
                in</button>
            </div>
      </form>

      <p class="mt-6 text-center text-sm text-gray-700">
        Don't have an account?
        <a href="/register" class="ml-2 font-semibold leading-6 forgot-text">Register Here</a>
      </p>
    </div>
  </div>

</section>