<section class="cart py-16">

    <% if(session.cart){ %>

        <div class="order container mx-auto px-8 xl:w-1/2">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <i class="fa-solid fa-cart-arrow-down text-2xl pt-2"></i>
                <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
            </div>
            <div class="pizza-list">

                <% for(let pizza of Object.values(session.cart.items)) { %>
                    <div class="flex items-center my-8">
                        <img class="w-24" src="/img/<%= pizza.item.image %>" alt="" />
                        <div class="ml-4 flex-1">
                            <h1><%=pizza.item.name%></h1>
                            <span><%=pizza.item.size%></span>
                        </div>
                        <span class="flex-1">
                            <%= pizza.qty %> Pcs
                        </span>
                        <span class="font-bold text-lg">‚Çπ<%= pizza.item.price * pizza.qty %></span>
                    </div>
                    <% } %>

            </div>
            <hr />
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount:</span>
                    <span class="amount text-2xl font-bold ml-2">‚Çπ<%= session.cart.totalPrice %></span>
                </div>

                <% if(user) { %>
                    <div>
                        <form action="/orders" method="POST" class="mt-12">
                            <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number"
                                name="phone" />
                            <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address"
                                name="address" />
                            <div>
                                <button class="btn-hero px-6 py-2 rounded-full text-white font-bold mt-6"
                                    type="submit">Order Now</button>
                            </div>
                        </form>
                    </div>

                    <% } else { %>
                        <a href="/login"
                            class="inline-block btn-hero px-6 py-2 rounded-full text-white font-bold mt-6 cursor-pointer">Login
                            to
                            continue
                        </a>
                        <% } %>
            </div>
        </div>

        <% }else { %>
            <div class="empty-cart py-16">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Cart Empty üôÅ</h1>
                    <p class="text-gray-500 text-lg mb-12">Lorem, ipsum dolor sit amet consectetur adipisicing elit.
                        <br> Fugiat dolorem maxime harum voluptatibus architecto reiciendis.</p>
                    <img class="w-2/5 mx-auto" src="/img/cartmen2.png" alt="cartman_img">
                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-hero text-white mt-12 font-bold">Go
                        Back</a>
                </div>
            </div>

            <% } %>
</section>